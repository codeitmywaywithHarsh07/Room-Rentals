<%- layout('/layouts/boilerplate.ejs') %>

<div class="container m-auto row mt-5">
    <div class="col-9">
        <div class="mega-container">
            <h2><%= user.username %></h2>
            <h6><%= user.email %></h6>
            <br><hr><br>
            <h2>My Listings</h2>

            <% if(myListings.length == 0) {%>
                <p>No Listings to Show</p>
            <% }else{ %>
                <div class="allCards">
                    <% for(let item of myListings) { %>
                        <a class="card_link" href="/listings/<%= item._id %>">
                            <div class="itemCard">
                                <div class="img_card">
                                    <img class="card-img-top card_img" src=<%= item.image.url %> alt="Hotel Image">
                                </div>
                                <div class="card_texts">
                                    <h3><%= item.title %></h3>
                                    <div><span><%= item.location %></span> | <span><%= item.country %></span></div>
                                    <div class="priceDiv">
                                        <h3>&#8377;<%= item.price.toLocaleString('en-IN') %>/night</h3>
                                        <p class="tax-show"> + 10% GST</p>
                                    </div>
                                    <div class="likes-count">
                                        <i class="fa-solid fa-heart"></i>
                                        <p><%= item.likes.length %></p>
                                    </div>
                                </div>
                            </div>
                        </a>
                        
                    <% } %>
                </div>
            <% } %>    

            <hr><br>
            <h2>Favorites</h2>
            <% if(user.favorites.length == 0) {%>
                <p>There are No Favorites</p>
            <% }else {%>
                <div class="allCards">
                    <% for(let item of user.favorites) { %>
                        <a class="card_link" href="/listings/<%= item._id %>">
                            <div class="itemCard">
                                <div class="img_card">
                                    <img class="card-img-top card_img" src=<%= item.image.url %> alt="Hotel Image">
                                </div>
                                <div class="card_texts">
                                    <h3><%= item.title %></h3>
                                    <div><span><%= item.location %></span> | <span><%= item.country %></span></div>
                                    <div class="priceDiv">
                                        <h3>&#8377;<%= item.price.toLocaleString('en-IN') %>/night</h3>
                                        <p class="tax-show"> + 10% GST</p>
                                    </div>
                                    <div class="likes-count">
                                        <i class="fa-solid fa-heart"></i>
                                        <p><%= item.likes.length %></p>
                                    </div>
                                </div>
                            </div>
                        </a>
                        
                    <% } %>
                </div>
            <% } %>    
        </div>
    </div>
</div>